<%= render 'shared/errors',obj: @department %>
<div class="row">
  <div class="col-md-offset-2 col-md-8 signup_back">
     <h1 class="center">New Department</h1>
  <div class="col-md-offset-1 col-md-11">
     <%= form_with(model: @department,url: admin_department_path,html:{class:"form-horizontal",role:"form"}, local: true) do |form| %>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= form.label :department_name%>
        </div>
        <div class="col-md-8">     
         <%= form.text_field :department_name,placeholder:"Enter Name..",class:"form-control" %>
        </div>
      </div>
    <div class="form-group">
      <div class="col-md-offset-2 col-md-8">
      <%= form.submit class:"btn btn-md btn-success col-md-12" %>
    </div>
    </div>
   
   <% end %>
   </div>
 </div>
</div>