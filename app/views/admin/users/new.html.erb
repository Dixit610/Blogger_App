<%= render 'shared/errors',obj: @user %>
<div class="row">
  <div class="col-md-offset-2 col-md-8 signup_back">
     <h1 class="center">Signup</h1>
  <div class="col-md-offset-1 col-md-11">
        <%= form_with(scope: :user,url: admin_users_path,html:{class:"form-horizontal",role:"form"}, local: true) do |form| %>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= form.label :user_name%>
        </div>
        <div class="col-md-8">     
         <%= form.text_field :user_name,placeholder:"Enter Name..",class:"form-control" %>
        </div>
      </div>
     <div class="form-group">
        <div class="control-label col-md-2">
          <%= form.label :email%>
        </div>
        <div class="col-md-8">     
         <%= form.email_field :email,placeholder:"Enter email..",class:"form-control" %>
        </div>
      </div>
       <div class="form-group">
        <div class="control-label col-md-2">
          <%= form.label :gender%>
        </div>
        <div class="col-md-1">     
            <%= form.radio_button :gender,"male",class:"form-control" %>
        </div>
        <div class="col-md-1">    
            <%= form.label :male,class:"control-label"%>
         </div>
         <div class="col-md-1">
            <%= form.radio_button :gender,"female",class:"form-control" %>
         </div>
         <div class="col-md-1">
            <%= form.label :female,class:"control-label"%>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= form.label :department%>
        </div>
        <div class="col-md-8">     
          <%= form.select(:department_id,User::LIST,{include_blank:'select..'},{class:"form-control"})%>
        </div>
      </div>
        <div class="form-group">
        <div class="control-label col-md-2">
          <%= form.label :image%>
        </div>
        <div class="col-md-8">     
          <%= form.file_field :profile_image ,class:"form-control"%>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= form.label :password%>
        </div>
        <div class="col-md-8">     
         <%= form.password_field :password,placeholder:"Enter password..",class:"form-control" %>
        </div>
      </div>
    <div class="form-group">
      <div class="col-md-offset-2 col-md-8">
      <%= form.submit class:"btn btn-md btn-success col-md-12" %>
    </div>
    </div>
   
   <% end %>
   </div>
 </div>
</div>