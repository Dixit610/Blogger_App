<%= render 'shared/errors',obj: @user %>
<div class="row">
  <div class="col-md-offset-4 col-md-4 login_back">
    
    <h1 class="center">Login</h1>
  <div class="col-md-12">
   <%= form_with(scope: :user,url: login_path,html:{class:"form-horizontal",role:"form"}, local: true) do |form| %>
     
      <div class="form-group">
        <div class="col-md-12">     
         <%= form.email_field :email,placeholder:"Enter email..",class:"form-control" %>
        </div>
      </div>
      
      <div class="form-group">  
        <div class="col-md-12">     
         <%= form.password_field :password,placeholder:"Enter password..",class:"form-control" %>
        </div>
      </div>
    <div class="form-group">
      <div class="col-md-12">
      <%= form.submit 'Login',class:"btn btn-md btn-success col-sm-12" %>
    </div>
    </div>
   
   <% end %>
 
</div>
</div>
</div>